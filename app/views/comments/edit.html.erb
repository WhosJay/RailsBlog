<div id="edit">
	<center>
		<%= form_for @comment do |f| %>
			<br>
			<h4><%= f.label "Edit comment: " %></h4>
		  <br>
		  <%= f.text_area :combody, cols: "50", rows: "4" %>
		  <br>
		  <%= f.hidden_field :id, value: @comment.id %>
		  <%= f.submit "Update" %>
		<% end %>
		<br>
		Delete your comment:
		<%= button_to("Delete", comment_path(@comment.id), method: :delete, data: {confirm: "Your comment will be DELETED, ok?"}) %>
	</center>
</div>